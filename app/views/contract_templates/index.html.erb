<ul class="breadcrumb lead">
  <li class="active">Contract Templates<span class="divider"></li>
</ul>

<div class="well">
  <%= link_to "New", new_world_contract_template_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <th>name</th>
  </thead>
  <tbody>
  <%- contract_templates.all.each do |template| %>
    <tr>
      <td><%= template.world.name %> (world id=<%= template.world.id %>) - <%= link_to template.codename, edit_world_contract_template_path(world_id: template.world_id, id: template.id) %> (<%= template.points %> points)</td>
      <td><%= link_to 'create item', new_world_contract_path(world_id: template.world_id, contract_id: template.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
