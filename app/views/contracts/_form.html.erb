<%= simple_form_for [contract.world, contract], :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

  <div class="form-inputs">
    <%= f.association :world %>
    <%= f.association :contract_template %>
    <%= f.association :player, :collection => contract.world.players %>
    <%= f.input :month_started %>
    <%= f.input :month_ended %>
    <%= f.input :ended %>
    <%= f.input :successful %>
    <%= f.input :on_time %>
    <%= f.input :volume_harvested_of_required_type %>
    <%= f.input :points_earned %>

    Provided megatile IDs (<%= contract.included_megatiles.count %>):
        <%= contract.included_megatiles.map { |mt| mt.id} %>
    <%= label_tag :megatile_ids_to_include, "Add these megatile IDs as provided with the contract: " %>
    <%=  text_field_tag :megatile_ids_to_include %>
    <br>
    Number of attached megatiles: <%= contract.attached_megatiles.count %>
  </div>
<% end %>
